<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.openStore.OpenStoreActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/lato"
        android:text="@string/storeName"
        android:textColor="@color/spareTxt"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/storeNameEdt"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/unavailable"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:textColorHint="@color/puregrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/view"
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:background="@color/underline"
        app:layout_constraintBottom_toBottomOf="@+id/storeNameEdt"
        app:layout_constraintEnd_toEndOf="@+id/storeNameEdt"
        app:layout_constraintStart_toStartOf="@+id/storeNameEdt" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lato"
        android:text="@string/storeAddress"
        android:textColor="@color/spareTxt"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/storeNameEdt" />

    <EditText
        android:id="@+id/storeAddressEdt"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/unavailable"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:textColorHint="@color/puregrey"
        app:layout_constraintEnd_toEndOf="@+id/storeNameEdt"
        app:layout_constraintStart_toStartOf="@+id/storeNameEdt"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:background="@color/underline"
        app:layout_constraintBottom_toBottomOf="@+id/storeAddressEdt"
        app:layout_constraintEnd_toEndOf="@+id/storeAddressEdt"
        app:layout_constraintStart_toStartOf="@+id/storeAddressEdt" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lato"
        android:text="@string/personName"
        android:textColor="@color/spareTxt"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/storeAddressEdt" />

    <EditText
        android:id="@+id/storePersonNameEdt"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/unavailable"
        android:inputType="textPersonName"
        android:paddingStart="8dp"
        android:textColorHint="@color/puregrey"
        app:layout_constraintEnd_toEndOf="@+id/storeAddressEdt"
        app:layout_constraintStart_toStartOf="@+id/storeAddressEdt"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/view7"
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:background="@color/underline"
        app:layout_constraintBottom_toBottomOf="@+id/storePersonNameEdt"
        app:layout_constraintEnd_toEndOf="@+id/storePersonNameEdt"
        app:layout_constraintStart_toStartOf="@+id/storePersonNameEdt" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lato"
        android:text="@string/email"
        android:textColor="@color/spareTxt"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/storePersonNameEdt" />

    <EditText
        android:id="@+id/storeEmailEdt"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/unavailable"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColorHint="@color/puregrey"
        app:layout_constraintEnd_toEndOf="@+id/storePersonNameEdt"
        app:layout_constraintStart_toStartOf="@+id/storePersonNameEdt"
        app:layout_constraintTop_toBottomOf="@+id/textView18"
        tools:ignore="RtlSymmetry" />

    <View
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:background="@color/underline"
        app:layout_constraintBottom_toBottomOf="@+id/storeEmailEdt"
        app:layout_constraintEnd_toEndOf="@+id/storeEmailEdt"
        app:layout_constraintStart_toStartOf="@+id/storeEmailEdt" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/lato"
        android:text="@string/phone"
        android:textColor="@color/spareTxt"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/storeEmailEdt" />

    <EditText
        android:id="@+id/storePhoneEdt"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/unavailable"
        android:inputType="number"
        android:paddingStart="8dp"
        android:textColorHint="@color/puregrey"
        app:layout_constraintEnd_toEndOf="@+id/storeEmailEdt"
        app:layout_constraintStart_toStartOf="@+id/storeEmailEdt"
        app:layout_constraintTop_toBottomOf="@+id/textView19"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/view8"
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:background="@color/underline"
        app:layout_constraintBottom_toBottomOf="@+id/storePhoneEdt"
        app:layout_constraintEnd_toEndOf="@+id/storePhoneEdt"
        app:layout_constraintStart_toStartOf="@+id/storePhoneEdt" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/storeSaveBtn"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/DefaultColor"
        app:cornerRadius="2dp"
        android:fontFamily="@font/lato"
        android:text="@string/searchSparePart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/storePhoneEdt"
        app:layout_constraintStart_toStartOf="@+id/storePhoneEdt" />






</androidx.constraintlayout.widget.ConstraintLayout>